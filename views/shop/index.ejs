<%- include('../partials/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../partials/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">N <%= product.price %></h2>
                            <p class="product__description"><%= product.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/products/<%= product._id %>" class='btn'>Details</a>
                            <% if (isAuthenticated) { %>
                                <%- include('../partials/add-to-cart.ejs', {product}) %>
                                <a href="/comments?productId=<%= product._id %>" class='btn'>View comments</a>
                            <% } %>
                        </div>
                    </article>
                <% } %>
            </div>
            <%- include('../partials/pagination.ejs', {
                currentPage, previousPage, hasPreviousPage, currentPage, hasNextPage, nextPage, lastPage
            }) %>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../partials/footer.ejs') %>
